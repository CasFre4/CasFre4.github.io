.navbar-dropdown {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* outline: red 2px solid; */
    flex: .66;
}
.navbar-left {
display: flex;
align-items: center;
gap: 10px;
/* width: 100%; */
height: 100%;
flex: .5;
/* height: 20rem; */
/* width: 20rem; */
/* outline: 2px solid lime; */
}
.navbar-left img {
    height: 80%;
    padding-left: .5rem;
}
.dropdown {
    /* left: 0; */
    align-items:end;
    
    width: 100%;
}
.navbar-center {
display: flex;
align-items: center;
}

.navbar-center ul {
display: flex;
list-style: none;
gap: 20px;
margin: 0;
padding: 0;
}

.nav-links li a {
color: white;
text-decoration: none;
}

.navbar-right {
display: flex;
gap: 15px;
padding-right: 1rem;
}

.icon-link {
font-size: 20px;
color: white;
text-decoration: none;
}


.hamburger {
display: none;
font-size: 26px;
cursor: pointer;
}


@media (max-width: 768px) {
    .hamburger {
        display: block;
        margin-left: auto;
        padding-right: 1rem;
        font-size: 3rem;
        /* align-items: center; */
    }

    .navbar-center,
    .navbar-right {
        /* display: none; */
        flex-direction: column;
        width: 50%;
        padding-top: 1rem;
        /* height: 400px; */
        background-color: #222;
    }

    .navbar-dropdown {
        /* margin-left: auto; */
        /* align-items: center; */
        /* justify-content: center; */
        max-height: 0;
        max-width: 0;
        overflow: hidden;
    }
    .navbar-dropdown.active {
        background-color: #222;
        max-height: none;
        /* height: 200px; */
        max-width: none;
        width: 40%;
        display: flex;
        /* outline: pink 2px solid; */
        flex-direction: column;
        /* justify-content: center; */
        align-items: center;
        position: absolute;
        right: 0;
        /* left: 0;/ */
        /* width: 100%; */
    }

    .nav-links {
        flex-direction: column;
        align-items: center;
    }

    .nav-links li {
        padding: 10px 0;
        width: 100%;
        text-align: center;
    }

    .navbar-right {
        align-items: center;
        padding: 10px 0;
    }

    .navbar-right a {
        padding: 10px;
    }
} 
